import React, { useState, useEffect } from 'react';
import axios from 'axios';

// This pulls from your Vercel Environment Variables
const API_URL = process.env.REACT_APP_API_URL || "http://127.0.0.1:5000";

export default function Guestbook() {
  const [entries, setEntries] = useState([]);
  const [form, setForm] = useState({ name: '', message: '' });
  const [loading, setLoading] = useState(true);

  const fetchEntries = async () => {
    try {
      setLoading(true);
      const res = await axios.get(`${API_URL}/guestbook`);
      setEntries(res.data);
    } catch (err) {
      console.error("Error fetching data. Server might be sleeping.", err);
    } finally {
      setLoading(false);
    }
  };

  const handleSubmit = async (e) => {
    e.preventDefault();
    try {
      await axios.post(`${API_URL}/guestbook`, form);
      setForm({ name: '', message: '' });
      fetchEntries();
    } catch (err) {
      alert("Failed to post message.");
    }
  };

  const handleDelete = async (id) => {
    try {
      await axios.delete(`${API_URL}/guestbook/${id}`);
      fetchEntries();
    } catch (err) {
      alert("Delete failed.");
    }
  };

  useEffect(() => {
    fetchEntries();
  }, []);

  return (
    <div style={{ maxWidth: '500px', margin: '40px auto', fontFamily: 'sans-serif' }}>
      <h1>My Guestbook</h1>
      
      <form onSubmit={handleSubmit} style={{ display: 'flex', flexDirection: 'column', gap: '10px' }}>
        <input 
          placeholder="Your Name" 
          value={form.name} 
          required
          onChange={e => setForm({...form, name: e.target.value})} 
        />
        <textarea 
          placeholder="Your Message" 
          value={form.message} 
          required
          onChange={e => setForm({...form, message: e.target.value})} 
        />
        <button type="submit" style={{ cursor: 'pointer' }}>Post to Guestbook</button>
      </form>

      <hr style={{ margin: '30px 0' }} />

      {loading ? (
        <p style={{ color: '#666' }}>â˜• Server is waking up, please wait...</p>
      ) : (
        <div>
          {entries.map(entry => (
            <div key={entry.id} style={{ border: '1px solid #ddd', padding: '15px', borderRadius: '8px', marginBottom: '10px' }}>
              <strong>{entry.name}</strong>
              <p>{entry.message}</p>
              <button 
                onClick={() => handleDelete(entry.id)} 
                style={{ color: 'red', background: 'none', border: 'none', cursor: 'pointer', padding: 0 }}
              >
                Delete
              </button>
            </div>
          ))}
        </div>
      )}
    </div>
  );
}